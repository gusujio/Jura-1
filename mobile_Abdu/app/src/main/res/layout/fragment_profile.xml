<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ProfileFragment.RegisterProfileFragment">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SIGN UP"
        android:textSize="50sp"
        android:textColor="#000"

        android:textAlignment="center"
        android:layout_marginTop="50dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textColor="#000"
        android:textSize="25sp"
        android:layout_marginStart="20dp"
        android:layout_marginVertical="160dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textColor="#000"

        android:textSize="25sp"
        android:layout_marginStart="20dp"
        android:layout_marginVertical="210dp"/>

    <EditText
        android:id="@+id/email_edit_text"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Enter your email"
        android:layout_marginHorizontal="150dp"
        android:layout_marginVertical="150dp"
        android:inputType="textEmailAddress"
        />
    <EditText
        android:id="@+id/password_edit_text"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="*********"
        android:layout_marginVertical="200dp"
        android:layout_marginHorizontal="150dp"
        android:inputType="textPassword"
        />
    <Button
        android:id="@+id/login_user_btn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Register"
        android:textColor="#fff"
        android:textSize="15sp"
        android:background="#000"
        android:layout_marginStart="150dp"
        android:layout_marginVertical="250dp"/>
    <Button
        android:id="@+id/go_login"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Login"
        android:textSize="15sp"
        android:textColor="#fff"
        android:background="#000"
        android:layout_marginStart="150dp"
        android:layout_marginVertical="310dp"
        />

</FrameLayout>